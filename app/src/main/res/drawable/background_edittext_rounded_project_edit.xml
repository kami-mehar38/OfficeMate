<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryLight" />
            <corners android:radius="@dimen/radius_corner_edittext_project_edit" />
            <padding android:bottom="@dimen/padding_edittext" android:left="@dimen/padding_edittext" android:right="@dimen/padding_edittext" android:top="@dimen/padding_edittext" />
        </shape>

    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/colorAccent" />
            <corners android:radius="@dimen/radius_corner_edittext_project_edit" />
            <padding android:bottom="@dimen/padding_edittext" android:left="@dimen/padding_edittext" android:right="@dimen/padding_edittext" android:top="@dimen/padding_edittext" />
        </shape>

    </item>

</selector>